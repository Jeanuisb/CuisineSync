<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#E5BFF3"/> <!-- Slightly darker shade for pressed state, adjust as needed -->
            <corners android:radius="24dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- Transparent for normal state -->
            <corners android:radius="24dp"/>
        </shape>
    </item>
</selector>